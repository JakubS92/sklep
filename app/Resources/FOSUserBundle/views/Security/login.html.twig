{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
<fieldset>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<!-- Form Name -->
<legend>Logowanie</legend>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
	<!-- Text input-->
	<div class="form-group">
	  <label class="col-md-2 control-label" for="username">Login</label>  
	  <div class="col-md-4">
	  <input id="username" name="_username" type="text" placeholder="placeholder" class="form-control input-md" required="">
	    
	  </div>
	</div>

	<!-- Password input-->
	<div class="form-group">
	  <label class="col-md-2 control-label" for="password">Hasło</label>
	  <div class="col-md-4">
	    <input id="password" name="_password" type="password" placeholder="placeholder" class="form-control input-md" required="">
	    
	  </div>
	</div>

	<!-- Multiple Checkboxes (inline) -->
	<div class="form-group">
	  <label class="col-md-2 control-label" for="remember_me"></label>
	  <div class="col-md-4">
	    <label class="checkbox-inline" for="remember_me-0">
	      <input type="checkbox" name="_remember_me" id="remember_me" value="on">
	      Zapamiętaj logowanie
	    </label>
	  </div>
	</div>
	<!-- Button -->
	<div class="form-group">
	  <div class="col-md-2"><a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary pull-right">Zarejestruj</a></div>
	  <div class="col-md-4">
	    <button onclick="this.submit()" id="_submit" name="_submit" class="btn btn-primary">Loguj</button>
	  </div>
	</div>




</fieldset>
</form>

{% endblock fos_user_content %}
